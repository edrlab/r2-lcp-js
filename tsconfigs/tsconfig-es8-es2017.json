{
  "extends": "./tsconfig-common",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/es8-es2017/",
    "lib": [
      "dom",
      "es2015",
      "dom.iterable"
    ],
    "paths": {
      "@parser/*": [
        "src/parser/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@transform/*": [
        "src/transform/*"
      ],
      "@r2-lcp-js/*": [
        "src/*"
      ],
      "@utils/*": [
        "node_modules/@evidentpoint/r2-utils-js/dist/es8-es2017/src/_utils/*"
      ],
      "@r2-utils-js/*": [
        "node_modules/@evidentpoint/r2-utils-js/dist/es8-es2017/src/*"
      ]
    }
  }
}
